<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/gray_bg</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme.HomeActivity">
        <item name="android:windowBackground">@color/primary_blue</item>
    </style>

    <style name="BaseAppTheme.LoginActivity">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="BaseAppTheme.RegisterActivity">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>