<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="State">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="State.Login">
        <item name="android:text">@string/btn_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/statefulButtonBackground</item>
    </style>
    <style name="State.Login.Done">
        <item name="android:alpha">1</item>
    </style>
    <style name="State.Login.Canceled">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="State.Publish">
        <item name="android:text">@string/btn_publish</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/statefulButtonBackground</item>
    </style>
    <style name="State.Publish.Done">
        <item name="android:alpha">1</item>
    </style>
    <style name="State.Publish.Canceled">
        <item name="android:alpha">0.5</item>
    </style>
</resources>