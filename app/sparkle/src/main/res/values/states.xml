<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="State">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="State.Done">
        <item name="android:alpha">1</item>
    </style>

    <style name="State.Done.PrimaryBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_blue_rounded_corners</item>
    </style>

    <style name="State.Done.PrimaryPink">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_pink_rounded_corners</item>
    </style>

    <style name="State.Canceled">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="State.Canceled.PrimaryBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_blue_rounded_corners</item>
    </style>

    <style name="State.Canceled.PrimaryPink">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_pink_rounded_corners</item>
    </style>

    <style name="State.Follow">
        <item name="android:text">@string/follow</item>
    </style>

    <style name="State.Follow.PrimaryBlue">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:background">@drawable/bg_primary_blue_stroke_rounded_corners</item>
    </style>

    <style name="State.Follow.PrimaryPink">
        <item name="android:textColor">@color/primary_pink</item>
        <item name="android:background">@drawable/bg_primary_pink_stroke_rounded_corners</item>
    </style>

    <style name="State.Following">
        <item name="android:text">@string/following</item>
    </style>

    <style name="State.Following.PrimaryBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_blue_rounded_corners</item>
    </style>

    <style name="State.Following.PrimaryPink">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_pink_rounded_corners</item>
    </style>
</resources>