        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- state done -->
    <style name="State.Small.Done">
        <item name="android:alpha">1</item>
    </style>

    <style name="State.Small.Done.PrimaryBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_blue_rounded_corners</item>
    </style>

    <style name="State.Small.Done.PrimaryPink">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_pink_rounded_corners</item>
