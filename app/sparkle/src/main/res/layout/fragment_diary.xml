<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    tools:ignore="RtlHardCoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/primaryColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/month"
                style="@style/TextStyle.Middle.White"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:text="Dec"/>

            <TextView
                android:id="@+id/day"
                style="@style/TextStyle.Large.White"
                android:layout_gravity="center_horizontal"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:text="15"/>

            <TextView
                android:id="@+id/week"
                style="@style/TextStyle.Middle.White"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18.5dp"
                android:text="Thu"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@color/white">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/avatar"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:placeholderImage="?attr/primaryColor"
                            app:placeholderImageScaleType="fitCenter"
                            app:roundAsCircle="true"/>

                        <TextView
                            android:id="@+id/nickname"
                            style="@style/TextStyle.Large.Black"
                            android:layout_toRightOf="@id/avatar"
                            android:layout_marginLeft="10dp"
                            android:text="nickname"/>

                        <TextView
                            android:id="@+id/description"
                            style="@style/TextStyle.Middle.Gray"
                            android:layout_alignLeft="@id/nickname"
                            android:layout_alignParentBottom="true"
                            android:text="description description description description"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/content"
                    style="@style/TextStyle.Normal.Gray"
                    android:layout_width="match_parent"
                    android:layout_below="@id/title"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1000000"
                    android:ellipsize="none"
                    android:lineSpacingExtra="8sp"
                    android:text="content"/>

                <TextView
                    android:id="@+id/title"
                    style="@style/TextStyle.Large.Black"
                    android:layout_below="@id/user"
                    android:layout_marginTop="10dp"
                    android:layout_alignLeft="@id/content"
                    android:text="title"/>
            </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/primaryColor"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/attentions"
                style="@style/TextStyle.Small.White"
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:drawableTop="@drawable/back"
                android:text="999+"/>

            <TextView
                android:id="@+id/likes"
                style="@style/TextStyle.Small.White"
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:drawableTop="@drawable/back"
                android:text="999+"/>

            <TextView
                android:id="@+id/comments"
                style="@style/TextStyle.Small.White"
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:drawableTop="@drawable/back"
                android:text="999+"/>

            <TextView
                android:id="@+id/corrects"
                style="@style/TextStyle.Small.White"
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:drawableTop="@drawable/back"
                android:text="999+"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/edit_correct"
                style="@style/TextStyle.Middle.White"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawableLeft="@drawable/back"
                android:drawablePadding="8dp"
                android:text="Correct"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="top|right"
        android:background="@color/white"/>
</android.support.v7.widget.CardView>