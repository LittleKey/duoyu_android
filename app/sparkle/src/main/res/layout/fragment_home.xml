<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <!-- title bar begin -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_primary_blue_round_title_bar"
            android:padding="1dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:background="@color/primary_blue"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Follow"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:text="Last"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:text="Write"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/primary_blue"
            android:text="12 Dec."/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_for_title_bar"/>

    <!-- title bar end -->
    <!-- content view pager begin -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:shadowColor="@color/month_in_content_shadow"
            android:shadowDy="1"
            android:shadowDx="0"
            android:shadowRadius="10"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="12 Dec."/>
    </FrameLayout>

    <!-- content view pager end -->

    <!-- tab bar begin -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_for_tab_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_blue">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@drawable/discover"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@drawable/discover"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@drawable/discover"/>

    </LinearLayout>

    <!-- tab bar end -->

</LinearLayout>